# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Ethereum Sepolia Testnet RPC URL
# Get from: https://infura.io/ or https://alchemy.com/
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_API_KEY

# Alternative RPC providers (uncomment to use)
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# SEPOLIA_RPC_URL=https://rpc.sepolia.org

# Ethereum Mainnet RPC URL (for production)
# MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_API_KEY

# Local network URL (for development)
LOCALHOST_RPC_URL=http://127.0.0.1:8545

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================

# Deployer private key (DO NOT include 0x prefix)
# WARNING: Never commit this file with real keys!
PRIVATE_KEY=your_private_key_without_0x_prefix_here

# Mnemonic phrase (alternative to private key)
# MNEMONIC=your twelve word mnemonic phrase here

# =============================================================================
# ETHERSCAN VERIFICATION
# =============================================================================

# Etherscan API Key for contract verification
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Alternative block explorers
# POLYGONSCAN_API_KEY=your_polygonscan_key
# BSCSCAN_API_KEY=your_bscscan_key

# =============================================================================
# GAS REPORTING
# =============================================================================

# Enable gas reporting during tests
REPORT_GAS=true

# CoinMarketCap API Key for gas price in USD
# Get from: https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Gas price settings (in gwei)
GAS_PRICE=auto
GAS_LIMIT=auto

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Deployed contract address (auto-filled after deployment)
CONTRACT_ADDRESS=

# Contract owner address (defaults to deployer if not set)
OWNER_ADDRESS=

# Pauser role address (for emergency stops)
PAUSER_ADDRESS=

# Admin role address (for administrative functions)
ADMIN_ADDRESS=

# =============================================================================
# ACCESS CONTROL CONFIGURATION
# =============================================================================

# Multi-signature wallet address (for governance)
MULTISIG_ADDRESS=

# Timelock controller address (for delayed operations)
TIMELOCK_ADDRESS=

# Treasury address (for funds management)
TREASURY_ADDRESS=

# Fee collector address
FEE_COLLECTOR_ADDRESS=

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable contract pausing functionality
ENABLE_PAUSE=true

# Rate limiting (requests per time window)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_MAX_REQUESTS=100

# Maximum transaction value (in wei)
MAX_TRANSACTION_VALUE=1000000000000000000

# Minimum transaction value (in wei)
MIN_TRANSACTION_VALUE=1000000000000000

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Enable verbose test output
TEST_VERBOSE=false

# Test timeout (in milliseconds)
TEST_TIMEOUT=40000

# Enable coverage reporting
COVERAGE_ENABLED=true

# =============================================================================
# OPTIMIZATION SETTINGS
# =============================================================================

# Solidity optimizer enabled
OPTIMIZER_ENABLED=true

# Optimizer runs (higher = cheaper execution, more expensive deployment)
# 200 = balanced, 1000 = optimize for execution, 1 = optimize for deployment
OPTIMIZER_RUNS=200

# Enable Yul optimizer
YUL_OPTIMIZER=true

# Via IR compilation
VIA_IR=true

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Enable performance monitoring
PERFORMANCE_MONITORING=true

# Sentry DSN (for error tracking)
# SENTRY_DSN=your_sentry_dsn_here

# Analytics provider
# ANALYTICS_ENABLED=false
# ANALYTICS_KEY=your_analytics_key

# =============================================================================
# IPFS CONFIGURATION
# =============================================================================

# IPFS gateway URL
IPFS_GATEWAY=https://ipfs.io/ipfs/

# Pinata API credentials (for IPFS pinning)
# PINATA_API_KEY=your_pinata_api_key
# PINATA_SECRET_KEY=your_pinata_secret_key

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Frontend API URL
API_URL=http://localhost:3000

# WebSocket URL
WS_URL=ws://localhost:3001

# Frontend build mode
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION (if using off-chain storage)
# =============================================================================

# Database URL
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Redis URL (for caching)
# REDIS_URL=redis://localhost:6379

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# Slack webhook (for alerts)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord webhook (for alerts)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================

# GitHub token for automated releases
# GITHUB_TOKEN=your_github_token

# Codecov token for coverage reporting
# CODECOV_TOKEN=your_codecov_token

# Docker registry credentials
# DOCKER_USERNAME=your_docker_username
# DOCKER_PASSWORD=your_docker_password

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Enable debug mode
DEBUG=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Custom chain ID (for private networks)
# CHAIN_ID=31337

# Block confirmation requirements
CONFIRMATIONS=2

# Transaction retry attempts
TX_RETRY_ATTEMPTS=3

# Transaction retry delay (in milliseconds)
TX_RETRY_DELAY=5000

# =============================================================================
# NOTES
# =============================================================================
#
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env file to version control
# 3. Keep your private keys secure
# 4. Use environment-specific .env files (.env.development, .env.production)
# 5. Refer to DEPLOYMENT.md for detailed configuration guide
#
# =============================================================================
