{
  "name": "private-art-investment",
  "version": "1.0.0",
  "description": "Anonymous Art Investment Platform with FHE Privacy - Complete Security & Performance Optimization",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:parallel": "hardhat test --parallel",
    "coverage": "hardhat coverage",
    "lint": "npm run lint:sol && npm run lint:js",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:sol:fix": "solhint 'contracts/**/*.sol' --fix",
    "lint:js": "eslint '**/*.js'",
    "lint:js:fix": "eslint '**/*.js' --fix",
    "format": "prettier --write 'contracts/**/*.sol' 'scripts/**/*.js' 'test/**/*.js'",
    "format:check": "prettier --check 'contracts/**/*.sol' 'scripts/**/*.js' 'test/**/*.js'",
    "deploy:localhost": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "verify:sepolia": "hardhat run scripts/verify.js --network sepolia",
    "interact:localhost": "hardhat run scripts/interact.js --network localhost",
    "interact:sepolia": "hardhat run scripts/interact.js --network sepolia",
    "simulate": "hardhat run scripts/simulate.js --network hardhat",
    "simulate:localhost": "hardhat run scripts/simulate.js --network localhost",
    "node": "hardhat node",
    "node:fork": "hardhat node --fork $SEPOLIA_RPC_URL",
    "flatten": "hardhat flatten",
    "size": "hardhat size-contracts",
    "size:report": "hardhat size-contracts --output-file contract-sizes.txt",
    "dev": "http-server public -p 8080 -c-1 --cors",
    "build": "hardhat compile",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "security:check": "npm run lint:sol && npm run security:audit",
    "prepare": "husky install",
    "precommit": "npm run lint && npm run format:check && npm test",
    "prepush": "npm run security:audit && npm run coverage",
    "ci": "npm run lint && npm run compile && npm test && npm run coverage",
    "analyze": "npm run test:gas && npm run size",
    "validate": "npm run lint && npm run compile && npm run test && npm run security:check",
    "docs:generate": "hardhat docgen",
    "graph:dependencies": "madge --image dependency-graph.svg scripts/"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "fhe",
    "privacy",
    "art",
    "investment",
    "anonymous",
    "smart-contracts",
    "hardhat",
    "security",
    "optimization",
    "defi"
  ],
  "author": "Private Art Investment Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-security": "^2.1.0",
    "hardhat": "^2.19.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "madge": "^6.1.0",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.2.0",
    "solhint": "^4.0.0",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.5",
    "solidity-docgen": "^0.6.0-beta.36"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "ethers": "^6.14.0"
  },
  "lint-staged": {
    "*.sol": [
      "solhint",
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run coverage"
    }
  }
}
